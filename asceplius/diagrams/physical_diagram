@startuml

entity patient
{
*pesel
*name: text
*lastname: text
*email: text
*password: text
*phone: int
*street_name: text 
*street_number: text
*flat_number: text
*city: text
*postal_code: text
*country: text
*patient_card_id: int
*gender: text 
*age: tinyint
*doctor_id: int
}

entity doctor
{
*id
*name: text
*lastname: text
*email: text
*phone: int
*hospital_id: int
*office_number: smallint
*spec_id: int
}

entity spec
{
*id
*name: text
}

entity hospital
{
*id
*name: text
*street_name: text 
*street_number: text
*city: text
*postal_code: text
*country: text
}

entity patient_card
{
*id
*info_id: int
*hospital_id: int
}

entity pc_info
{
*id
*patient_id: int
*illness: text
*date_of_visit: date
*doctor_id: int
*drugs_in_use: text
}

entity prescription{
*id
*patient_id: int
*doctor_id: int
*drug_name: text
*quantity: text
*dosage: text
}

doctor ||..|{ spec
patient ||..|| patient_card
patient_card ||..|{ pc_info
doctor ||..|{ pc_info
hospital ||..|{ doctor
doctor ||..|{ prescription
patient ||..|{ prescription
hospital ||..|{ patient_card

@enduml